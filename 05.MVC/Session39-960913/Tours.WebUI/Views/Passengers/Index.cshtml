@model IEnumerable<Tours.Models.Passenger>

@{
    ViewBag.Title = "لیست مسافران";
}

<p>
    @Html.ActionLink("ایجاد مسافر جدید", "Create")
</p>
<table class="table">
    <tr>
        <th>
            عکس
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NationalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassportNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.PhotoPath" style="max-height:60px" class="img-thumbnail" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Family)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NationalCode)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PassportNumber)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
